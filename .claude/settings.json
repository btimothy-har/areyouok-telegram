{
  "permissions": {
    "allow": [
      "Bash(make:*)",
      "Read(./**)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)"
    ]
  },
  "hooks": {
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "git status"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "uv run ruff check --no-fix . || echo 'Code quality checks failed. See output above.' >&2"
          },
          {
              "type": "command",
              "command": "uv run ruff format --check . || echo 'Code formatting checks failed. See output above.' >&2"
          }
        ]
      }
    ]
  }
}
